<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>
  <div class="book_form">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="book_form">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="book_form">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

<%= link_to "Show", book_path(@book.id) %>
 | 
<%= link_to "Back", books_path %>