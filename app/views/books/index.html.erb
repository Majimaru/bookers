<h1>Books</h1>

<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <div class="new_book_form">
    <label>Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="new_book_form">
    <label>Body</label>
    <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>
<% end %>